<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<TextView
    android:id="@+id/l1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/feed"
    android:gravity="center_horizontal"
    android:textColor="@color/black"
    android:textStyle="normal|bold"
    android:layout_margin="@dimen/text_medium"/>
        <TextView
            android:id="@+id/phoneLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_medium"
            android:text="Title"
            android:padding="@dimen/padding_medium" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_margin="@dimen/padding_small"
                android:padding="@dimen/padding_small"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_medium"
            android:text="Comment"
            android:padding="@dimen/padding_medium" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comment"
                android:lines="4"
                android:layout_below="@id/title"
                android:layout_margin="@dimen/padding_small"
                android:padding="@dimen/padding_small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_medium"
            android:text="To Staff:"
            android:padding="@dimen/padding_medium" />
            <Spinner
                android:id="@+id/feedback_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_small"
                android:padding="@dimen/padding_medium"
                android:autofillHints="Staff"
                android:background="@drawable/feedback_spinner_border"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/send"
                android:text="Submit"
                android:gravity="center_horizontal"
                android:background="@drawable/rounded_green"
                android:textColor="@color/white"
                android:layout_below="@id/comment"
                android:layout_marginRight="@dimen/padding_too_large"
                android:layout_marginLeft="@dimen/padding_too_large"
                android:layout_marginTop="@dimen/padding_extralarge"/>


        </LinearLayout>



</ScrollView>